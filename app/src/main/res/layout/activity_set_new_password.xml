<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@drawable/signbackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:text="设置密码"
            android:gravity="center"
            android:textSize="29sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="310dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">
            <com.app.views.CleanEditText
                android:id="@+id/newpassword_set"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                style="@style/login_edit_style2"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:hint="设置新密码(至少6位)"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
            </com.app.views.CleanEditText>

            <ImageView
                android:id="@+id/hidepassword1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_hide"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/showpassword1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_eye"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:visibility="gone"/>
        </RelativeLayout>



        <View
            android:layout_width="290dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/Gray"/>
        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <com.app.views.CleanEditText
                android:id="@+id/newpassword_confirm"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                style="@style/login_edit_style2"
                android:hint="确认新密码"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/hidepassword2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_hide"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/showpassword2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_eye"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_width="290dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/Gray"/>


        <Button
            android:id="@+id/btn_down"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_login_selector1"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back4"
        android:layout_width="21dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:onClick="onClick"
        android:src="@drawable/leftarrow1" />


</RelativeLayout>