<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8fa"
    android:orientation="vertical"
    tools:context="com.app.ui.SoftwareIntruct">
  <include
      android:id="@+id/main2" layout="@layout/fragment_title2" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="180dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/tv_version"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_introduct" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:text="当前版本: 1.2.1" />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@color/white">

    <TextView
        android:id="@+id/tv_introduct"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_marginStart="15dp"
        android:text="功能介绍"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"/>
  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@color/white">

  <TextView
      android:id="@+id/tv_update"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@color/white"
      android:layout_marginStart="15dp"
      android:text="检查更新"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:gravity="center_vertical"/>
  </RelativeLayout>
</LinearLayout>
